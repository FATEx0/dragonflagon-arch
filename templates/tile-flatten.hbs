<form class="dfarch-flatten-form">
	<input class="shrink" type="checkbox" id="lights" name="lights" {{#if lights}}checked{{/if}} />
	<label class="grow" for="lights">{{localize 'DF_ARCHITECT.TileFlattener.RenderLighting'}}</label>
	<div></div>
	<input class="shrink" type="checkbox" id="showBG" name="showBG" {{#if showBG}}checked{{/if}} />
	<label class="grow" for="showBG">{{localize 'DF_ARCHITECT.TileFlattener.RenderBackground'}}</label>
	<div></div>
	<input class="shrink" type="checkbox" id="hidden" name="hidden" {{#if hidden}}checked{{/if}} />
	<label class="grow" for="hidden">{{localize 'DF_ARCHITECT.TileFlattener.RenderHiddenTiles'}}</label>
	<div></div>
	<input class="shrink" type="radio" value="all" id="canvas" name="select" {{#unless select}}checked{{/unless}}>
	<label class="grow" for="canvas">{{localize 'DF_ARCHITECT.TileFlattener.RenderEntireCanvas'}}</label>
	<div></div>
	<input class="shrink" type="radio" value="cur" id="tiles" name="select" {{#if select}}checked{{/if}}>
	<label class="grow" for="tiles">{{localize 'DF_ARCHITECT.TileFlattener.RenderSelectedOnly'}}</label>
	<div><p>{{localize 'DF_ARCHITECT.TileFlattener.Margin'}}</p></div>
	<span class="grow">&nbsp;</span>
	<table class="shrink">
		<tr>
			<td></td>
			<td>
				<input class="overlayed" type="number" step="1" value="{{margin.t}}" id="top">
				<span class="input-overlay">px</span>
			</td>
			<td></td>
		</tr>
		<tr>
			<td>
				<input class="overlayed" type="number" step="1" value="{{margin.l}}" id="left">
				<span class="input-overlay">px</span>
			</td>
			<td><i class="fas fa-arrows-alt"></i></td>
			<td>
				<input class="overlayed" type="number" step="1" value="{{margin.r}}" id="right">
				<span class="input-overlay">px</span>
			</td>
		</tr>
		<tr>
			<td></td>
			<td>
				<input class="overlayed" type="number" step="1" value="{{margin.b}}" id="bottom">
				<span class="input-overlay">px</span>
			</td>
			<td></td>
		</tr>
	</table>
	<span class="grow">&nbsp;</span>
	<h3>{{localize 'DF_ARCHITECT.CaptureGameScreen.ScreenCapture.Format'}}</h3>
	<select name="format" id="format">
		<option value="png" {{#if png}}selected{{/if}}>{{localize 'DF_ARCHITECT.CaptureGameScreen.ScreenCapture.FormatPNG'}}</option>
		<option value="jpeg" {{#if jpeg}}selected{{/if}}>{{localize 'DF_ARCHITECT.CaptureGameScreen.ScreenCapture.FormatJPG'}}</option>
		<option value="webp" {{#if webp}}selected{{/if}}>{{localize 'DF_ARCHITECT.CaptureGameScreen.ScreenCapture.FormatWEB'}}</option>
	</select>
	<h3>{{localize 'DF_ARCHITECT.CaptureGameScreen.ScreenCapture.Compression'}}</h3>
	<output class="shrink">{{compression}}</output>
	<input class="grow" id="compression" name="compression" type="range" min="0" max="1" step="0.01"
		value="{{compression}}">
</form>