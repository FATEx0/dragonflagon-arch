<form class="dfarch-capture-form">
	<h3>{{localize 'DF_ARCHITECT.CaptureGameScreen_ScreenCapture_Target'}}</h3>
	<input class="shrink" type="radio" value="cur" id="cur" name="target" {{#unless all}}checked{{/unless}}>
	<label class="grow" for="cur">{{localize 'DF_ARCHITECT.CaptureGameScreen_ScreenCapture_Target_Current'}}</label>
	<div></div>
	<input class="shrink" type="radio" value="all" id="all" name="target" {{#if all}}checked{{/if}}>
	<label class="grow" for="all">{{localize 'DF_ARCHITECT.CaptureGameScreen_ScreenCapture_Target_All'}}</label>
	<div></div>
	<h3>{{localize 'DF_ARCHITECT.CaptureGameScreen_ScreenCapture_Format'}}</h3>
	<select name="format" id="format">
		<option value="png" {{#if png}}selected{{/if}}>{{localize 'DF_ARCHITECT.CaptureGameScreen_ScreenCapture_FormatPNG'}}</option>
		<option value="jpeg" {{#if jpeg}}selected{{/if}}>{{localize 'DF_ARCHITECT.CaptureGameScreen_ScreenCapture_FormatJPG'}}</option>
		<option value="webp" {{#if webp}}selected{{/if}}>{{localize 'DF_ARCHITECT.CaptureGameScreen_ScreenCapture_FormatWEB'}}</option>
	</select>
	<h3>{{localize 'DF_ARCHITECT.CaptureGameScreen_ScreenCapture_Compression'}}</h3>
	<output class="shrink">{{compression}}</output>
	<input class="grow" id="compression" name="compression" type="range" min="0" max="1" step="0.01" value="{{compression}}">
	<h3></h3>
</form>